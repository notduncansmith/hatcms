<style>
  article {
    width: 50%;
    margin-left: auto;
    margin-right: auto;
  }
  aside {
    width: 30%;
    float: left;
  }
  .main,.raw {
    width: 70%;
    float: right;
  }
</style>
<article>
<header>
  <h1><%= @post.title %></h1>
  <p><em>by <%= @post.author %></em></p>
</header>
	<aside>
  <strong>Tags:</strong>
  <ul>
    <% if @post.tags %>
    <% @post.tags.each do |tag| %>
      <li><a href="#"><%= tag %> &rarr;</a></li>
    <% end %>
    <% end %>
  </ul>

	</aside>
  <section class="main">
    <%= @post.body %>
  </section>
  <section class="raw">
    <h2>Raw Markdown:</h2>
    <p><%= @post.raw %></p>
  </section>
</article>